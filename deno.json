{
  "tasks": {
    "dev": "deno run --watch -A --import-map import_map.json src/main.ts",
    "test": "deno test -A --import-map import_map.json src/",
    "test:watch": "deno test -A --watch --import-map import_map.json",
    "e2e": "deno test -A --import-map import_map.json e2e/",
    "e2e:watch": "deno test -A --watch --import-map import_map.json e2e/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "compile": "deno compile -A --import-map import_map.json src/main.ts -o dist/noti",
    "compile:all": "deno task compile:linux && deno task compile:macos && deno task compile:windows",
    "compile:linux": "deno compile -A --import-map import_map.json --target x86_64-unknown-linux-gnu src/main.ts -o dist/noti-linux",
    "compile:macos": "deno compile -A --import-map import_map.json --target x86_64-apple-darwin src/main.ts -o dist/noti-macos",
    "compile:windows": "deno compile -A --import-map import_map.json --target x86_64-pc-windows-msvc src/main.ts -o dist/noti-windows.exe",
    "install": "deno install -A --import-map import_map.json -n noti src/main.ts",
    "clean": "rm -rf dist",
    "noti": "deno run -A --import-map import_map.json src/main.ts",
    "all-check": "deno task lint && deno check --import-map import_map.json src/ && deno task test"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.7",
    "@cliffy/table": "jsr:@cliffy/table@1.0.0-rc.7",
    "@deno-library/termbox": "jsr:@deno-library/termbox@0.2.1",
    "@notionhq/client": "npm:@notionhq/client@2.2.14",
    "@notionhq/client/build/src/api-endpoints.js": "npm:@notionhq/client@2.2.14/build/src/api-endpoints.js",
    "@notionhq/client/types.ts": "npm:@notionhq/client@2.2.14/build/src/api-types.d.ts",
    "@std/assert": "jsr:@std/assert@0.220.1",
    "@std/encoding": "jsr:@std/encoding@^1.0.7",
    "@std/fmt": "jsr:@std/fmt@0.220.1",
    "@std/fmt/colors": "jsr:@std/fmt@0.220.1/colors",
    "@std/fs": "jsr:@std/fs@0.220.1",
    "@std/html": "jsr:@std/html@^1.0.3",
    "@std/path": "jsr:@std/path@0.220.1",
    "@std/testing": "jsr:@std/testing@0.220.1",
    "@std/testing/bdd": "jsr:@std/testing@0.220.1/bdd",
    "@std/testing/mock": "jsr:@std/testing@0.220.1/mock",
    "marked": "npm:marked@9.1.6",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3"
  },
  "fmt": {
    "files": {
      "include": [
        "src/",
        "e2e/"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "include": [
      "src/",
      "e2e/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ],
      "exclude": [
        "no-explicit-any"
      ]
    }
  },
  "check": {
    "files": {
      "include": [
        "src/",
        "e2e/"
      ]
    }
  }
}