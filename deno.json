{
  "tasks": {
    "noti": "deno run -A src/main.ts",
    "dev": "deno run --watch --allow-env --allow-read --allow-write --allow-net --allow-run src/main.ts",
    "test": "deno test --allow-run",
    "test:watch": "deno test --watch --allow-run",
    "termbox-test": "deno run -A src/main.ts termbox-test"
  },
  "fmt": {
    "options": {
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@deno-library/termbox": "jsr:@deno-library/termbox@^0.2.1",
    "@std/cli": "jsr:@std/cli@^0.220.1",
    "@std/fmt": "jsr:@std/fmt@^0.220.1"
  }
}